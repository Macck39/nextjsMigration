# ===========================================
# Ragini Nursing Bureau - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# MongoDB Connection String (Required)
# Get from MongoDB Atlas: https://cloud.mongodb.com
MONGOURL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Authentication Secret (Required)
# Generate a strong random secret (32+ characters recommended)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-chars

# Node Environment (Required for production)
# Values: development | production
NODE_ENV=production

# Admin Bootstrap (Optional - Security Warning)
# Only set to "true" temporarily to create the first admin user
# IMPORTANT: Set to "false" or remove after creating admin account
ALLOW_ADMIN_BOOTSTRAP=false

# Site URL (Optional)
# Used for sitemap generation and canonical URLs
NEXT_PUBLIC_SITE_URL=https://ragininursingbureau.com
